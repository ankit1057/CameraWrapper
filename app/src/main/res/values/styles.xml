<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/background_light</item>
  </style>

  <!-- Camera2 specific theme -->
  <style name="Camera2Theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/camera_primary</item>
    <item name="colorPrimaryDark">@color/camera_primary_dark</item>
    <item name="colorAccent">@color/camera_accent</item>
    <item name="android:statusBarColor">@color/camera_primary_dark</item>
  </style>

</resources>
